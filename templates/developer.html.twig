{% extends "base.html.twig" %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
{{ parent() }}
{% endblock %}

{% block context %}
    <form method="POST" action="/addDeveloper">
        <div class="form-group">
            <label for="exampleFormControlInput1">Developer Name</label>
            <input type="name" required class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">duration</label>
            <select class="form-control" id="duration" name="duration">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">difficulty</label>
            <select class="form-control" id="difficulty" name="difficulty">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <input class="btn btn-primary" type="submit" value="Submit">
    </form>
{% endblock %}

